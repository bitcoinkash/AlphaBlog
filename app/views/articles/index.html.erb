<h1>Look here</h1>

<table>
<thead>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Description</th>
    <th colspan = '3'>Action</th>
  </tr>
</thead>
<tbody>
<% @articles.each do |article| %>
<tr>
<td> <%= article.id %></td>
<td> <%= article.title %></td>
<td> <%= article.description %></td>
<td> <%= link_to 'Edit', edit_article_path(article) %> </td>

<td> <%= link_to 'Show', article_path(article) %> </td>
<td>  <%= link_to 'Delete', article_path(article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this article?' } %> </td>

 
</tr>
<% end %>
</tbody>
</table>
<br>
<%= link_to 'New Article', new_article_path %>
